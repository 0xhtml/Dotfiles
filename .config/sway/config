input "type:keyboard" {
    xkb_layout de
    xkb_variant deadgraveacute
    xkb_options caps:escape
}

input "type:touchpad" {
    tap enabled
}

output "*" bg wallpaper.png center

seat seat0 hide_cursor 2000

set $mod Mod4

floating_modifier $mod

bindsym $mod+Return exec footclient
bindsym $mod+n exec footclient -e nnn

bindsym $mod+Shift+q kill
bindsym $mod+l exec .config/sway/lock.sh

bindsym $mod+d exec rofi -show drun
bindsym $mod+Shift+d exec rofi -show filebrowser
bindsym $mod+Tab exec rofi -show window
bindgesture swipe:3:up exec rofi -show window
bindsym $mod+Shift+s exec .config/sway/power-menu.sh

bindsym $mod+j focus left
bindsym $mod+k focus right

bindsym $mod+Shift+j move left
bindsym $mod+Shift+k move right

bindsym $mod+f fullscreen toggle
bindsym $mod+Shift+space floating toggle

bindsym $mod+Shift+r reload
bindsym $mod+Shift+e exec swaynag -t warning -m 'Do you really want to exit?' -B 'Yes' 'swaymsg exit'

bindsym Print exec grim
bindsym $mod+Print exec grim -g "$(slurp)"
bindsym $mod+Shift+Print exec grim -g "$(slurp)" - | wl-copy -t image/png
bindsym $mod+Shift+b exec grim - | zbarimg -1 --raw - | wl-copy
bindsym $mod+Shift+c exec grim -g "$(slurp -p)" -t ppm - | convert - -format '%[pixel:p{0,0}]' txt:- | wl-copy

bindsym $mod+m exec dunstctl close
bindsym $mod+Shift+m exec dunstctl close-all
bindsym $mod+h exec dunstctl history-pop

bindsym $mod+x [urgent=latest] focus
bindsym $mod+4 resize set width 717 px

bindsym $mod+u workspace 1
bindsym $mod+i workspace 2
bindsym $mod+o workspace 3
bindsym $mod+p workspace 4
bindsym $mod+7 workspace 5
bindsym $mod+8 workspace 6
bindsym $mod+9 workspace 7
bindsym $mod+0 workspace 8

bindsym $mod+Shift+u move container to workspace 1
bindsym $mod+Shift+i move container to workspace 2
bindsym $mod+Shift+o move container to workspace 3
bindsym $mod+Shift+p move container to workspace 4
bindsym $mod+Shift+7 move container to workspace 5
bindsym $mod+Shift+8 move container to workspace 6
bindsym $mod+Shift+9 move container to workspace 7
bindsym $mod+Shift+0 move container to workspace 8

mode resize {
    bindsym j resize shrink width 10 px or 2 ppt
    bindsym k resize grow width 10 px or 2 ppt
    bindsym h resize shrink height 10 px or 2 ppt
    bindsym l resize grow height 10 px or 2 ppt

    bindsym Escape mode default
}
bindsym $mod+r mode resize

bindsym XF86MonBrightnessUp exec .config/sway/bright.sh +
bindsym XF86MonBrightnessDown exec .config/sway/bright.sh -

bindsym XF86AudioMute exec .config/sway/vol.sh m
bindsym XF86AudioRaiseVolume exec .config/sway/vol.sh +
bindsym XF86AudioLowerVolume exec .config/sway/vol.sh -

bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

mode "swap 1" {
    bindsym i [workspace=1] move workspace swap; [workspace=2] move workspace 1; [workspace=swap] move workspace 2; mode default
    bindsym o [workspace=1] move workspace swap; [workspace=3] move workspace 1; [workspace=swap] move workspace 3; mode default
    bindsym p [workspace=1] move workspace swap; [workspace=4] move workspace 1; [workspace=swap] move workspace 4; mode default
    bindsym 7 [workspace=1] move workspace swap; [workspace=5] move workspace 1; [workspace=swap] move workspace 5; mode default
    bindsym 8 [workspace=1] move workspace swap; [workspace=6] move workspace 1; [workspace=swap] move workspace 6; mode default
    bindsym 9 [workspace=1] move workspace swap; [workspace=7] move workspace 1; [workspace=swap] move workspace 7; mode default
    bindsym 0 [workspace=1] move workspace swap; [workspace=8] move workspace 1; [workspace=swap] move workspace 8; mode default

    bindsym Escape mode default
}
