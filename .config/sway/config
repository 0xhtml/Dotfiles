input type:keyboard {
    xkb_layout "de"
    xkb_options "caps:escape"
}

input type:touchpad {
    tap enabled
}

set $mod Mod4

output * bg ~/.config/sway/wallpaper.png fill

bindsym $mod+v exec footclient
bindsym $mod+c kill
bindsym $mod+d exec rofi -show drun

bindsym $mod+Shift+r reload
bindsym $mod+Shift+e exec swaynag -t warning -m 'Do you really want to exit?' -b 'Yes' 'swaymsg exit'
bindsym $mod+Shift+s exec rofi -show p -modi "p:rofi-power-menu --choices shutdown/reboot/suspend --no-symbols"

bindsym $mod+Shift+f exec grim
bindsym $mod+Alt+f exec grim -g "$(slurp)"

bindsym $mod+f fullscreen toggle

bindsym $mod+m exec dunstctl close
bindsym $mod+Shift+m exec dunstctl close-all

floating_modifier $mod normal

set $left j
set $right k

bindsym $mod+$left focus left
bindsym $mod+$right focus right

bindsym $mod+Shift+$left move left
bindsym $mod+Shift+$right move right

set $ws1 u
set $ws2 i
set $ws3 o
set $ws4 p
set $ws5 7
set $ws6 8
set $ws7 9
set $ws8 0

bindsym $mod+$ws1 workspace number 1
bindsym $mod+$ws2 workspace number 2
bindsym $mod+$ws3 workspace number 3
bindsym $mod+$ws4 workspace number 4
bindsym $mod+$ws5 workspace number 5
bindsym $mod+$ws6 workspace number 6
bindsym $mod+$ws7 workspace number 7
bindsym $mod+$ws8 workspace number 8

bindsym $mod+Shift+$ws1 move container to workspace number 1
bindsym $mod+Shift+$ws2 move container to workspace number 2
bindsym $mod+Shift+$ws3 move container to workspace number 3
bindsym $mod+Shift+$ws4 move container to workspace number 4
bindsym $mod+Shift+$ws5 move container to workspace number 5
bindsym $mod+Shift+$ws6 move container to workspace number 6
bindsym $mod+Shift+$ws7 move container to workspace number 7
bindsym $mod+Shift+$ws8 move container to workspace number 8

mode "resize" {
    bindsym $left resize shrink width 20px
    bindsym $right resize grow width 20px
    bindsym h resize shrink height 20px
    bindsym l resize grow height 20px

    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

set $ntf notify-send -t 600 -h string:x-dunst-stack-tag

bindsym XF86MonBrightnessUp exec $ntf:bright "Brightness: `brightnessctl -mn1 s 10%+ | cut -d, -f4`"
bindsym XF86MonBrightnessDown exec $ntf:bright "Brightness: `brightnessctl -mn1 s 10%- | cut -d, -f4`"

bindsym XF86AudioMute exec $ntf:vol "Volume: `(eval $(pamixer -t --get-mute) && echo muted) || echo $(pamixer --get-volume)%`"
bindsym XF86AudioRaiseVolume exec $ntf:vol "Volume: `pamixer -u -i 10 --get-volume`%"
bindsym XF86AudioLowerVolume exec $ntf:vol "Volume: `pamixer -u -d 10 --get-volume`%"

bindsym $mod+n exec $ntf:mut "Microphone: `(eval $(pamixer --default-source -t --get-mute) && echo muted) || echo unmuted`"

bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

font pango:DejaVu Sans Mono 9

set $foreg #F8F8F2
set $backg #282A36
set $muted #44475A
set $highl #BD93F9
set $urgnt #FF5555

#                       border bg     text   indica ch_border
client.focused          $highl $backg $foreg $highl $highl
client.focused_inactive $muted $backg $foreg $muted $muted
client.unfocused        $backg $backg $foreg $backg $backg
client.urgent           $urgnt $backg $foreg $urgnt $urgnt
client.placeholder      $backg $backg $foreg $backg $backg

client.background       $backg

bar {
    colors {
        background $backg
        statusline $foreg
        separator  $muted

        #                  border bg     text
        focused_workspace  $highl $highl $backg
        active_workspace   $muted $muted $foreg
        inactive_workspace $muted $backg $foreg
        urgent_workspace   $urgnt $backg $urgnt
        binding_mode       $urgnt $backg $urgnt
    }

    status_command i3status
    tray_padding 2
}

default_border pixel 2
default_floating_border pixel 2
gaps inner 12

seat seat0 hide_cursor 3000

