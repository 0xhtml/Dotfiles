mode swap {
    bindsym u mode "swap 1"
    bindsym i mode "swap 2"
    bindsym o mode "swap 3"
    bindsym p mode "swap 4"
    bindsym 7 mode "swap 5"
    bindsym 8 mode "swap 6"
    bindsym 9 mode "swap 7"
    bindsym 0 mode "swap 8"

    bindsym Escape mode default
}
bindsym $mod+z mode swap

font pango:monospace 9

set $foreg #F8F8F2
set $backg #282A36
set $muted #44475A
set $highl #BD93F9
set $urgnt #FF5555

#                       border bg     text   indica ch_border
client.focused          $highl $backg $foreg $highl $highl
client.focused_inactive $muted $backg $foreg $muted $muted
client.unfocused        $backg $backg $foreg $backg $backg
client.urgent           $urgnt $backg $foreg $urgnt $urgnt
client.placeholder      $backg $backg $foreg $backg $backg

bar {
    colors {
        background $backg
        statusline $foreg
        separator  $muted

        #                  border bg     text
        focused_workspace  $highl $highl $backg
        active_workspace   $muted $muted $foreg
        inactive_workspace $muted $backg $foreg
        urgent_workspace   $urgnt $backg $urgnt
        binding_mode       $urgnt $backg $urgnt
    }

    status_command py3status -b
}

default_border pixel 2
default_floating_border pixel 2
gaps inner 12

exec dunst
exec dex -a -e sway
exec udiskie -s -f "footclient -e nnn"
exec playerctld daemon

for_window [window_role="pop-up"] floating enable
for_window [window_role="bubble"] floating enable
for_window [window_role="dialog"] floating enable
for_window [window_type="dialog"] floating enable
for_window [app_id=".*-float"] floating enable
for_window [title="Entwicklerwerkzeuge.*"] floating enable

include /etc/sway/config.d/*

# TODO: get rid of systemd user session
exec systemctl --user start sway-session.target
exec swaymsg -t subscribe '["shutdown"]' && systemctl --user stop sway-session.target

exec swayidle -w timeout 610 '.config/sway/lock.sh' timeout 600 'swaymsg "output * dpms off"' resume 'swaymsg "output * dpms on"' timeout 1800 'echo idle > .idle' resume 'echo active > .idle' before-sleep '.config/sway/lock.sh'
